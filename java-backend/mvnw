#!/bin/sh
# Maven wrapper script
MVNW_DIR="$(dirname "$0")"
JAVA_EXE="${JAVA_HOME:+$JAVA_HOME/bin/}java"
if [ -z "$JAVA_HOME" ]; then
  JAVA_EXE=$(command -v java)
fi

# Download maven wrapper jar if missing
WRAPPER_JAR="$MVNW_DIR/.mvn/wrapper/maven-wrapper.jar"
WRAPPER_URL="https://repo.maven.apache.org/maven2/org/apache/maven/wrapper/maven-wrapper/3.3.2/maven-wrapper-3.3.2.jar"
if [ ! -f "$WRAPPER_JAR" ]; then
  mkdir -p "$MVNW_DIR/.mvn/wrapper"
  if command -v curl >/dev/null 2>&1; then
    curl -fsSL "$WRAPPER_URL" -o "$WRAPPER_JAR"
  elif command -v wget >/dev/null 2>&1; then
    wget -q "$WRAPPER_URL" -O "$WRAPPER_JAR"
  else
    echo "Error: curl or wget required to download Maven Wrapper" >&2
    exit 1
  fi
fi

exec "$JAVA_EXE" -classpath "$WRAPPER_JAR" org.apache.maven.wrapper.MavenWrapperMain "$@"